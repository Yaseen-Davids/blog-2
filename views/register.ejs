<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Register</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!-- This is the fonts link -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
  
</head>
<body id="register-image">

    <!-- This is the main container -->
    <div id="container">

        <section>
            <div id="home-image">

                <div id="login-text">
                    <a href="/"><h1>TechTalk</h1></a>
                    <h3>Sharing News about Things that Matter</h3>
                    <h4>Don't have an Account ? Register, otherwise Login</h4>
                </div>

                <!-- This is the error/success messages -->
                <% if (errors) { %>
                    <% errors.forEach(function (error){ %>
                        <div class="alert alert-login alert-danger">
                            <%= error.msg %>
                        </div>
                    <% }) %>
                <% } %>
                
                <div id="myForm" class="register-form">
                    <div class="margin-wrapper">
                        <form method="POST" action="/users/register">

                            <label for="name">Your Name : </label><br>
                            <input type="text" name="name" id="name" placeholder="Your Name">
                            <br>
                            <label for="email">Your Email : </label><br>
                            <input type="email" name="email" id="email" placeholder="Your Email">
                            <br>
                            <label for="username">Your Username : </label><br>
                            <input type="text" name="username" id="username" placeholder="Your Username">
                            <br>
                            <label for="password">Your Password : </label><br>
                            <input type="password" name="password" id="password" placeholder="Your Password">
                            <br>
                            <label for="password2">Confirm Password : </label><br>
                            <input type="password" name="password2" id="password2" placeholder="Confirm Password">
                            <br>

                            <button class="add-new-btn" type="submit">Register<i class="fas fa-chevron-right"></i></button>

                            <p>Already Have an Account ? <a href="/users/login">Log in</a></p>
                        </form>
                    </div>
                </div>

            </div>
        </section>

    </div>

    <script src="/javascripts/jquery.js"></script>
    <script src="/javascripts/script.js"></script>
    <script>

        $(document).ready(function(){

        })
    </script>

</body>
</html>